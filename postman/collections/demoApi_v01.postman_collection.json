            "exec": [
              "// Parse the JSON response",
              "const jsonResponse = pm.response.json();",
              "",
              "// Extract the token field from the response",
              "const tokenValue = jsonResponse.token;",
              "",
              "// Store the token in collection variables",
              "if (tokenValue) {",
              "    pm.collectionVariables.set('token', tokenValue);",
              "    console.log('Token saved to collection variables:', tokenValue);",
              "}",
              "",
              "// Test to verify the token exists in the response",
              "pm.test('Response contains a token', function() {",
              "    pm.expect(jsonResponse).to.have.property('token');",
              "    pm.expect(jsonResponse.token).to.be.a('string');",
              "});"
            ]
          }
        }
